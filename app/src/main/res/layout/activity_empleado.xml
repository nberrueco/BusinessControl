<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"
    android:background="#0B4E70">

    <ImageView
        android:layout_marginLeft="0dp"
        android:layout_width="1900dp"
        android:layout_height="85dp"
        android:id="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/emplebarra" />

    <ImageButton

        android:layout_marginTop="2dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/btnInicio"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_marginRight="20dp" />





    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:background="@drawable/barraabajoemple" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnInicio"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView2">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnCalcularRutasemple"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rutasemple"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnEventosemple"
            android:background="@drawable/eventos_admin"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnMensajeriaemple"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/mensajeria_admin"
            android:layout_below="@+id/btnMensajeriaEmple"
            android:layout_alignStart="@+id/btnEventos"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnGastosEmple"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/gastosemple"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="66dp"
            android:layout_gravity="right|top" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="146dp"
            android:id="@+id/btnAveriasemple"
            android:background="@drawable/averias_admin"

            android:layout_gravity="center_horizontal|bottom" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/btnChatemple"
            android:background="@drawable/chatemple"

            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>

</RelativeLayout>